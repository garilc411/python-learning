f = open("word.txt","r",encoding = "UTF-8")

# print(f"{f.read()}")

count = 0
for line in f:
    line_split = line.split(" ")
    for element in line_split:
        if element == "garlic":
            count += 1
print(f"æœ‰{count}ä¸ªgarlic")


